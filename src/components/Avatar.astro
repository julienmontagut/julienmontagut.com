---
export interface Props {
    src: string;
    alt: string;
}

const { src, alt } = Astro.props;
const size = 256;
---

<div class="avatar">
    <img src={src} alt={alt} width={size} height={size} />
</div>

<style>
    .avatar {
        max-height: max-content;
        max-width: max-content;
        border-radius: 50%;
        overflow: hidden;
        border: 4px solid var(--color-accent);
        margin: 2em;
    }
    .avatar img {
        display: block;
        /* height: auto;
        width: 100%; */
    }
</style>
