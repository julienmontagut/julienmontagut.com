---
export interface Props {
  title: string;
}

const { title } = Astro.props;
---

<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <meta name="generator" content={Astro.generator} />
    <title>{title}</title>
  </head>
  <body class="bg-zinc-50 text-gray-900 dark:bg-gray-900 dark:text-zinc-50">
    <header class="flex justify-between items-center bg-yellow p-2">
      <a href="/" class="text-2xl font-bold font-serif hover:text-ultramarine ml-4">JM</a>
      <nav class="flex space-x-4 font-light font-mono mr-4">
        <a href="/about" class="hover:text-ultramarine hover:underline underline-offset-4 decoration-2">About</a>
      </nav>
    </header>
    <slot />
    <footer class="position-absolute float-right mb-4 mr-4">
      <div id="wcb" class="carbonbadge dark:wcb-d"></div>
      <script src="https://unpkg.com/website-carbon-badges@1.1.3/b.min.js" defer></script>
    </footer>
  </body>
</html>
